# Hyrax Task Management - Environment Variables
# Copy this file to .env and update with your values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_USE_API=true
VITE_APP_TITLE=Hyrax Task Management
VITE_APP_VERSION=1.0.0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
VITE_SESSION_TIMEOUT=24h

# Super Admin Credentials (fallback if users.json fails)
SUPER_ADMIN_EMAIL=admin@wearehyrax.com
SUPER_ADMIN_PASSWORD=HyraxAdmin2024!SecurePass
SUPER_ADMIN_NAME=HYRAX Super Admin

# Features
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false

# Deployment
VITE_DEPLOYMENT_ENV=development

# Webhook Configuration
LOGIN_WEBHOOK_URL=https://workflows.wearehyrax.com/webhook/new-tasks-login

# Note: For Vercel deployment, set JWT_SECRET and SUPER_ADMIN_* variables
# in the Vercel dashboard under Settings > Environment Variables